<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}/@artifactId@.json}"/>

    <include resource="com/rbkmoney/sharedresources/logback/spring-defaults.xml"/>
    <include resource="com/rbkmoney/sharedresources/logback/console-appender.xml"/>
    <include resource="com/rbkmoney/sharedresources/logback/json-appender.xml"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <logger name="com.rbkmoney" level="ALL"/>

    <jmxConfigurator/>
</configuration>